<%= simple_form_for(flat) do |f| %>
    <%= f.input :name, input_html: { placeholder: "Great appartement in Burmingham" }%>
    <%= f.input :address, input_html: { placeholder: "Roman Street" } %>
    <%= f.input :description, input_html: { placeholder: "Describe your flat" } %>
    <%= f.input :price_per_night, input_html: { min: 0, step: 5 }%>
    <%= f.input :number_of_guests, input_html: { min: 0 } %>
    <%= f.button :submit, "Submit", class: "btn btn-primary mb-3" %>
  <% end %>
