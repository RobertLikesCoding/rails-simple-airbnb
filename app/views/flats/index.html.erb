<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1 class="my-4">All Our Flats (<%= @flats.length %>)</h1>
    <%= link_to "Add new flat", new_flat_path, class: "btn btn-white border border-primary text-primary my_button text-align-center", role: "button" %>
  </div>

  <div class="row">
    <% @flats.each do |flat| %>
      <div class="col-md-4 mb-4">
        <div class="card h-100">
          <%= image_tag flat.url, class: "card-img-top h-50", alt: "Card image cap" %>
          <%# <img class="card-img-top" src="..." alt="Card image cap"> %>
          <div class="card-body bg-light">
            <h5 class="card-title"><%= flat.name %></h5>
            <p class="card-text"><%= flat.address %></p>
            <p>
              <i class="fa-solid fa-user"></i> <%= flat.number_of_guests %>
              <i class="fa-solid fa-euro-sign"></i> <%= flat.price_per_night %>
            </p>
          </div>
          <div class="card-footer bg-white py-3 d-flex gap-3">
            <%= link_to "More Info", flat_path(flat) %>
            <%= link_to "Edit", edit_flat_path(flat), class: "text-warning" %>
            <%= link_to "Delete", flat_path(flat), class: "text-danger", data: {turbo_method: "delete", turbo_confirm: "Are you sure?"} %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
